@model webcrafters.be_ASP.NET_Core_project.Models.DomainTransferViewModel

<section class="max-w-2xl mx-auto px-6 py-12">
    <h1 class="text-2xl font-bold mb-6">Verhuis domeinnaam: @Model.Domain</h1>

    <form asp-action="Transfer" method="post" class="space-y-6">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Domain" />

        <div>
            <label class="block text-sm text-gray-300">Autorisatiecode (EPP)</label>
            <input asp-for="AuthCode" class="w-full p-3 rounded bg-gray-800 border border-gray-600 text-white" required />
        </div>

        <div>
            <label class="block text-sm text-gray-300">Naam houder</label>
            <input asp-for="HolderName" class="w-full p-3 rounded bg-gray-800 border border-gray-600 text-white" required />
        </div>

        <div>
            <label class="block text-sm text-gray-300">E-mail houder</label>
            <input asp-for="HolderEmail" type="email" class="w-full p-3 rounded bg-gray-800 border border-gray-600 text-white" required />
        </div>

        <div class="p-4 bg-gray-900 border border-gray-700 rounded">
            <p><strong>Kostenoverzicht voor verhuis:</strong></p>
            <ul class="text-left mt-2">
                <li>Basisprijs TransIP: €@Model.PriceExVat.ToString("0.00") @Model.Currency</li>
                <li>+ 21% btw: €@Model.PriceInclVat.ToString("0.00") @Model.Currency</li>
                <li>+ 40% marge: <strong class="text-green-400">€@Model.FinalPrice.ToString("0.00") @Model.Currency / jaar</strong></li>
            </ul>
        </div>

        <button type="submit"
                class="px-6 py-3 bg-purple-600 hover:bg-purple-700 rounded-lg font-semibold text-white shadow">
            Verder naar betaling
        </button>
    </form>
</section>