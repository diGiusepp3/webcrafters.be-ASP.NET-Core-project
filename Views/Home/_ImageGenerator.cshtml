<section id="imageGenerator" class="relative w-full py-20 border-t border-gray-800 bg-black">
    <div class="max-w-7xl mx-auto px-6">
        <!-- Titel -->
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-extrabold text-white">🖼 Image Generator</h2>
            <p class="mt-4 text-gray-400 text-lg max-w-2xl mx-auto">
                Ontdek de meest recent gegenereerde AI-afbeeldingen.
            </p>
        </div>

        <!-- Grid met images -->
        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            <!-- Voorbeeld item -->
            <div class="bg-gray-900 rounded-xl overflow-hidden border border-gray-800 hover:border-purple-500 hover:shadow-purple-500/30 transition">
                <img src="/img/imageGenerator/generatedImages/img-mNyrg168E8PL1PIqLzTFvGR7.png"
                     alt="Afbeelding Generate a wallpaper with a desk and a futuristic layout"
                     class="w-full h-48 object-cover">
                <div class="p-4">
                    <p class="text-sm text-gray-400 italic">
                        Generate a wallpaper with a desk and a futuristic layout
                    </p>
                </div>
            </div>

            <div class="bg-gray-900 rounded-xl overflow-hidden border border-gray-800 hover:border-purple-500 hover:shadow-purple-500/30 transition">
                <img src="/img/imageGenerator/generatedImages/OIG4.jpg"
                     alt="Afbeelding Generate an image of 2 people with a cocktail"
                     class="w-full h-48 object-cover">
                <div class="p-4">
                    <p class="text-sm text-gray-400 italic">
                        Generate an image of 2 people with a cocktail
                    </p>
                </div>
            </div>

            <div class="bg-gray-900 rounded-xl overflow-hidden border border-gray-800 hover:border-purple-500 hover:shadow-purple-500/30 transition">
                <img src="/img/imageGenerator/generatedImages/_5147ce5f-7d6f-4375-aea8-0d02c783c3ad.jpg"
                     alt="Afbeelding create a 3-point perspective environment"
                     class="w-full h-48 object-cover">
                <div class="p-4">
                    <p class="text-sm text-gray-400 italic">
                        Create a 3-point perspective environment
                    </p>
                </div>
            </div>
        </div>

        <!-- Call-to-action -->
        <div class="mt-16 bg-gray-900 border border-gray-800 rounded-xl shadow-lg p-8 text-center">
            <h3 class="text-2xl font-bold text-white mb-4">Maak een account om de generator te testen</h3>
            <p class="text-gray-400 mb-6">
                Combineer creatieve <span class="text-white">webdesigns</span> met slimme 
                <span class="text-white">SEO optimalisatie</span> en 
                <span class="text-white">digitale marketing</span>.  
                Onze AI-tools helpen je naar een succesvolle online aanwezigheid.
            </p>
            <a asp-controller="Auth" asp-action="Register"
               class="px-8 py-4 bg-purple-600 hover:bg-purple-700 rounded-lg text-lg font-semibold shadow-lg transition text-white">
                Account maken
            </a>
        </div>
    </div>
</section>
