@* Views/Shared/_Technology.cshtml *@
<section id="technologie" class="relative w-full py-20 border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-extrabold text-white">Onze Technologie</h2>
            <p class="text-gray-400 mt-3">
                We bouwen niet alleen voor klanten, maar ontwikkelen ook eigen producten en AI-tools.
            </p>
        </div>

        <div class="grid md:grid-cols-2 gap-12">
            <!-- Listen! demo -->
            <div class="bg-gray-900 rounded-xl p-6 border border-gray-800 hover:border-purple-500 hover:shadow-purple-500/30 transition">
                <h3 class="text-xl font-semibold text-white mb-4">🎵 Listen! Muziekspeler</h3>
                <p class="text-gray-400 mb-4">
                    Onze eigen streamingtechnologie in .NET MAUI. Probeer de demo:
                </p>
                <audio controls class="w-full">
                    <source src="/audio/demo1.mp3" type="audio/mpeg">
                    <source src="/audio/demo2.mp3" type="audio/mpeg">
                    Je browser ondersteunt geen audio.
                </audio>
                <p class="text-sm text-gray-500 mt-2">Demo-tracks ter illustratie</p>
            </div>

            <!-- HomeManager AI demo -->
            <div class="bg-gray-900 rounded-xl p-6 border border-gray-800 hover:border-orange-500 hover:shadow-orange-500/30 transition">
                <h3 class="text-xl font-semibold text-white mb-4">🤖 HomeManager AI Planner</h3>
                <p class="text-gray-400 mb-4">
                    Geef een afspraak in, onze AI plant hem automatisch in:
                </p>

                <form method="post" asp-controller="Demo" asp-action="PlanAppointment" class="flex gap-2">
                    <input type="text" name="input" placeholder="Bv: kapper morgen 14u"
                           class="flex-1 rounded-lg bg-gray-800 border border-gray-700 text-gray-200 p-2 focus:outline-none focus:border-orange-400" />
                    <button type="submit"
                            class="px-4 py-2 bg-orange-600 hover:bg-orange-700 rounded-lg text-white font-semibold">
                        Plan
                    </button>
                </form>

                @if (ViewBag.PlannedAppointment != null)
                {
                    <div class="mt-4 text-green-400">
                        Afspraak ingepland op: <strong>@ViewBag.PlannedAppointment</strong>
                    </div>
                }
            </div>
        </div>

        <div class="text-center mt-16">
            <h3 class="text-2xl font-bold text-white mb-4">Ook jouw idee realiseren?</h3>
            <p class="text-gray-400 mb-6">Wij bouwen maatwerk software en producten die écht werken.</p>
            <a href="/Contact" class="px-8 py-4 bg-purple-600 hover:bg-purple-700 rounded-lg text-lg font-semibold shadow-lg transition text-white">
                Neem contact op
            </a>
        </div>
    </div>
</section>
