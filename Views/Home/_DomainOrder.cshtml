<!-- Extra sectie: Domeinnaam bestellen -->
@if (TempData["Success"] != null)
{
    <div id="domain-response" class="bg-green-600/20 text-green-400 border border-green-500 rounded-lg px-4 py-3 mb-6">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div id="domain-response" class="bg-red-600/20 text-red-400 border border-red-500 rounded-lg px-4 py-3 mb-6">
        @TempData["Error"]

        @if (TempData["DomainTaken"] != null)
        {
            <div class="mt-4">
                <a asp-controller="Domain" asp-action="Transfer" asp-route-domain="@TempData["DomainTaken"]"
                   class="inline-block px-6 py-2 bg-orange-600 hover:bg-orange-700 rounded-lg text-white font-semibold transition">
                    🔄 Verhuis deze domeinnaam naar WebCrafters
                </a>
            </div>
        }
    </div>
}





<section id="domeinnaam" class="relative w-full py-20 border-t border-gray-800 bg-gradient-to-b from-black via-gray-900 to-black">
    <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-3xl md:text-4xl font-extrabold text-white">Registreer jouw Domeinnaam</h2>
        <p class="text-gray-400 mt-4 mb-8">
            Een sterke online aanwezigheid begint met de juiste domeinnaam. 
            Via Webcrafters kan je eenvoudig een domeinnaam bestellen en meteen aan de slag.
        </p>

        <form method="post" action="/Domain/Check" class="flex flex-col sm:flex-row gap-4 justify-center">
            <input type="text" name="domain" placeholder="bijvoorbeeld: jouwbedrijf.be"
                   class="flex-1 rounded-lg bg-gray-800 border border-gray-700 text-gray-200 p-3 focus:outline-none focus:border-purple-500" required />

            <button type="submit"
                    class="px-6 py-3 bg-purple-600 hover:bg-purple-700 rounded-lg text-white font-semibold shadow-lg transition">
                Controleer beschikbaarheid
            </button>
        </form>

        <p class="text-sm text-gray-500 mt-4">
            ✔ Direct bestellen &nbsp; | &nbsp; 🌍 Alle populaire extensies (.be, .com, .net, …) &nbsp; | &nbsp; 🔒 Veilig en betrouwbaar
        </p>
    </div>
</section>

@section Scripts {
    <script>
document.addEventListener("DOMContentLoaded", function() {
    const el = document.getElementById("domain-response");
    if (el) {
        el.scrollIntoView({ behavior: "smooth", block: "center" });
    }
        });
</script>
}
