@* Domeinchecker partial *@
<section id="domeinnaam" class="relative w-full py-20 border-t border-gray-800">
    <div class="max-w-3xl mx-auto px-6 text-center">
        <h2 class="text-3xl md:text-4xl font-extrabold text-white mb-6">Check jouw domeinnaam</h2>
        <p class="text-gray-400 mb-10">Controleer direct of jouw domeinnaam vrij is en registreer of verhuis hem.</p>

        @* âœ… Foutmelding *@
        @if (TempData["Error"] is string err)
        {
            <div class="p-4 mb-6 rounded bg-red-900/30 border border-red-700 text-red-200">@err</div>
        }

        @* âœ… Succesmelding *@
        @if (TempData["Success"] is string ok)
        {
            <div class="p-4 mb-6 rounded bg-green-900/30 border border-green-700 text-green-200">@ok</div>
        }

        <form asp-controller="Domain" asp-action="Check" method="post" class="flex flex-col sm:flex-row gap-4 justify-center">
            @Html.AntiForgeryToken()
            <input type="text" name="domain" placeholder="jouwdomein.be"
                   class="flex-1 p-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-500" required />
            <button type="submit"
                    class="px-6 py-3 bg-purple-600 hover:bg-purple-700 rounded-lg font-semibold text-white shadow">
                Controleer
            </button>
        </form>

        @* âœ… Als domein bezet is, toon link naar verhuis *@
        @if (TempData["DomainTaken"] is string takenDomain)
        {
            <div class="mt-6">
                <a asp-controller="Domain" asp-action="Transfer" asp-route-domain="@takenDomain"
                   class="text-purple-400 hover:underline">
                    ðŸ‘‰ Verhuis @takenDomain naar WebCrafters
                </a>
            </div>
        }
    </div>
</section>