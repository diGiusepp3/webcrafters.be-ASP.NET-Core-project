@using webcrafters.be_ASP.NET_Core_project.Models
@inject Microsoft.Extensions.Options.IOptions<SiteSettings> SiteSettings

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @SiteSettings.Value.SiteName</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-gray-200 font-sans antialiased">

    <!-- Navigatie -->
<header class="bg-black/80 backdrop-blur sticky top-0 z-50 border-b border-gray-800">
    <div class="max-w-7xl mx-auto px-6 flex items-center justify-between h-16">
        <a href="/" class="flex items-center gap-2 text-xl font-bold text-white">
            <span>@SiteSettings.Value.SiteName</span>
        </a>
        <!-- Desktop menu -->
        <nav class="hidden md:flex">
            <ul class="flex gap-8 text-sm font-medium">
                <li><a href="/" class="hover:text-purple-400 transition">Home</a></li>
                <li><a href="/Home/Privacy" class="hover:text-purple-400 transition">Diensten</a></li>
                <li><a href="/Home/Privacy" class="hover:text-purple-400 transition">Portfolio</a></li>
                <li><a href="/Home/Privacy" class="hover:text-purple-400 transition">Blog</a></li>
                <a asp-controller="Contact" asp-action="Index" class="hover:text-white">Contact</a>
            </ul>
        </nav>
        <!-- Hamburger voor mobiel -->
        <button class="md:hidden text-gray-200 hover:text-white focus:outline-none" id="menu-toggle">
            ☰
        </button>
    </div>
    <!-- Mobile dropdown -->
    <nav id="mobile-menu" class="hidden md:hidden px-6 pb-4">
        <ul class="flex flex-col gap-4 text-sm font-medium">
            <li><a href="/" class="hover:text-purple-400 transition">Home</a></li>
            <li><a href="/Home/Privacy" class="hover:text-purple-400 transition">Diensten</a></li>
            <li><a href="/Home/Privacy" class="hover:text-purple-400 transition">Portfolio</a></li>
            <li><a href="/Home/Privacy" class="hover:text-purple-400 transition">Blog</a></li>
            <a asp-controller="Contact" asp-action="Index" class="hover:text-white">Contact</a>
        </ul>
    </nav>
</header>

    <!-- Content -->
    <main class="max-w-7xl mx-auto px-6 py-16">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-black border-t border-gray-800 py-8 text-center text-gray-500 text-sm">
        <p>&copy; @DateTime.Now.Year @SiteSettings.Value.SiteName – Alle rechten voorbehouden.</p>
        <div class="mt-3 flex justify-center gap-6">
            <a href="https://github.com/diGiusepp3" target="_blank" class="hover:text-white">GitHub</a>
            <a href="https://www.linkedin.com/in/matthias-gielen" target="_blank" class="hover:text-white">LinkedIn</a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
