@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto mt-12 bg-gray-900 p-8 rounded-lg shadow-lg border border-gray-800">
    <h2 class="text-2xl font-bold text-white mb-6 text-center">Inloggen</h2>

    @if (ViewBag.Error != null)
    {
        <p class="text-red-500 mb-4">@ViewBag.Error</p>
    }

    <form asp-action="Login" method="post" class="space-y-4">
        <input name="email" type="text" placeholder="Email of gebruikersnaam"
               class="w-full p-3 rounded bg-gray-800 border border-gray-700 text-gray-200 focus:outline-none focus:border-purple-500" required />

        <input name="password" type="password" placeholder="Wachtwoord"
               class="w-full p-3 rounded bg-gray-800 border border-gray-700 text-gray-200 focus:outline-none focus:border-purple-500" required />

        <button type="submit"
                class="w-full py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition">
            Inloggen
        </button>
    </form>

    <p class="text-gray-400 text-center mt-6">
        Nog geen account?
        <a asp-action="Register" class="text-purple-400 hover:text-purple-300">Maak er een</a>
    </p>
</div>