@model webcrafters.be_ASP.NET_Core_project.Models.User
@{
    ViewData["Title"] = "Registreren";
}

<div class="max-w-md mx-auto mt-12 bg-gray-900 p-8 rounded-lg shadow-lg border border-gray-800">
    <h2 class="text-2xl font-bold text-white mb-6 text-center">Maak een account</h2>

    @if (ViewBag.Error != null)
    {
        <p class="text-red-500 mb-4">@ViewBag.Error</p>
    }

    <form asp-action="Register" method="post" class="space-y-4">
        <input asp-for="FirstName" placeholder="Voornaam"
               class="w-full p-3 rounded bg-gray-800 border border-gray-700 text-gray-200 focus:outline-none focus:border-purple-500" required />

        <input asp-for="LastName" placeholder="Achternaam"
               class="w-full p-3 rounded bg-gray-800 border border-gray-700 text-gray-200 focus:outline-none focus:border-purple-500" required />

        <input asp-for="Username" placeholder="Gebruikersnaam"
               class="w-full p-3 rounded bg-gray-800 border border-gray-700 text-gray-200 focus:outline-none focus:border-purple-500" required />

        <input asp-for="Email" type="email" placeholder="Email"
               class="w-full p-3 rounded bg-gray-800 border border-gray-700 text-gray-200 focus:outline-none focus:border-purple-500" required />

        <input asp-for="Password" type="password" placeholder="Wachtwoord"
               class="w-full p-3 rounded bg-gray-800 border border-gray-700 text-gray-200 focus:outline-none focus:border-purple-500" required />

        <button type="submit"
                class="w-full py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition">
            Account maken
        </button>
    </form>

    <p class="text-gray-400 text-center mt-6">
        Heb je al een account?
        <a asp-action="Login" class="text-purple-400 hover:text-purple-300">Log in</a>
    </p>
</div>